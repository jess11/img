<!DOCTYPE html>
<html>
<head>
  <title>Emotionfaces</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= cloudinary_js_config %>
  <%= csrf_meta_tags %>

</head>
<body>
  <nav class= "navbar-fixed-top">
    <%= link_to "Home", root_path , :class=>"navBtn" %>
    <%= link_to "Draw", draw_path , :class=>"navBtn"%>
    <%= link_to "Masks", face_path , :class=>"navBtn"%>
    <% if @current_user.present? %>
      <%= link_to "My Gallery", gallery_path , :class=>"navBtn"%>
      <%= link_to "Logout #{@current_user.name}", login_path, :method => 'delete', :class=>"navBtn" %>
    <% else %>
      <%= link_to "Sign up", new_user_path , :class=>"navBtn"%>
      <%= link_to "Login", login_path, :class=>"navBtn" %>
    <% end %>
  </nav>
<div class="app-wrapper">
  <%= yield %>
</div>
</body>
</html>
